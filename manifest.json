{
    "name": "Ability Auditor Helper",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "devtools_page": "devtools/loader.html",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "clipboardWrite"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "extension_icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "data/*",
                "modules/*",
                "css/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}